{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%;  }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="example-wrapper">
    

    <div class="d-block justify-content-center text-center ">
        {% for post in posts %}
            {% if post.id == picked %}
            <h1>{{post.title}}</h1>
            {% set break = 0 %}
            {% for key, post in posts %}
                {% if post.priority == 1 and break == 0 %}
                        {% set break = 1 %}
                        <a href="{{ path('blogPick',{id: post.id})}}">
                            <div  class="image1" style=" height:400px; background-repeat: no-repeat;
                                background-size: cover; 
                                position: relative;

                                ">
                                
                            </div>
                        </a>
                {% endif %}
            {% endfor %}
            
                <p class="text-secondary mt-2">{{post.title}}</p>
            <div style="text-align:justify;
                        word-break:keep-all; line-height: 1.6; font-size:20px" 
                        class="text-secondary">
                {{post.article}}
            </div>
            <div class="row mt-5">
                <div class="col-10">
                    <p class="text-secondary text-start">{{post.author}}</p>
                </div>
                <div class="col-1">
                    <img src="{{ asset("images/userImages/ivan.jpg")}}" class="text-end img-rounded" alt="author" height="20"> 
                </div>
                <div class="col-1">
                    <p class="text-secondary text-end">{{post.author}}</p>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    
    </div>
</div>

{% endblock %}