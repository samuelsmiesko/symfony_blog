{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%;  }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 
    <div class="row">
        <div class="col-6 p-0 ">
            {% for key, list in lists|slice(0, 1) %}
                {% if list.priority == 1 %}
                        <a href="">
                            <div  class="image1" style=" height:400px; background-repeat: no-repeat;
                                background-size: cover; 
                                position: relative;

                                background-image:url('data:image/png;base64,{{ images[key] }}')">
                                <h4>{{list.title}}</h4>
                                <div class="paragraph ">{{list.article}}</div>
                            </div>
                        </a>
                {% endif %}
            {% endfor %}
        </div>

        <div class="col-6 p-0 " >
            {% set foo = 5 %}
            {% for key, list in lists|slice(0, 3) %}
                {% if list.priority == 2 %}
                        <a href="">
                            <div  class="image1" style=" height:200px; background-repeat: no-repeat;
                                background-size: cover; 
                                position: relative;

                                background-image:url('data:image/png;base64,{{ images[key] }}')">
                                <h4>{{list.title}}</h4>
                                {# {{foo}} #}
                                <div class="paragraph ">{{list.article}}</div>
                            </div>
                        </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="container mt-3 "> 
      
            {% for post in posts|slice(0, 5) %}
            
            <div class="inline-block m-4 flash">
                <div class="square "></div>
                <div class="d-inline m-3  ">{{post.title}}</div>
                {# <div class="d-inline m-3  ">{{foo}}</div>  #}
                <div class="d-inline float-end  ">{{post.author}}</div>             
            </div>
            {% endfor %}
  
    </div>
    <div class="d-flex mt-5 justify-content-center ">
        <ul class="pagination ">
        <li class="page-item "><a  class="page-link paginationTag bg-white" href="#">Previous</a></li>
        {% set break = 0 %}
        {% for list in lists %}
            {% set foo = loop.length / 5 %}
                {% if break == 0 %}
                    <li class="page-item"><a id="{{loop.index}}" onclick="SetCounter()" class="page-link paginationTag bg-white" href="{{ path('blogPick',{page: loop.index})}}">{{loop.index}}</a></li>
                    
                {% endif %}
                {% if loop.index > foo %}
                    
                    {% set break = 1 %}
                {% endif %}
        {% endfor %}
        <li class="page-item"><a  class="page-link paginationTag bg-white" href="#">Next</a></li>
        </ul>
    </div>
</div>
{% endblock %}
